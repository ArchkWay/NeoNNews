<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back"
    >
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbarDet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        >
    </android.support.v7.widget.Toolbar>

    <TextView
        android:id="@+id/tvDetTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#fff"
        android:textSize="21sp"
        android:text="@string/pojoText"
        android:textAlignment="center"
        android:layout_margin="8dp"
        app:layout_constraintTop_toBottomOf="@+id/toolbarDet"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />
    <TextView
        android:id="@+id/tvDetDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#fff"
        android:textAlignment="center"
        android:text="@string/pojoTime"
        android:layout_margin="8dp"
        app:layout_constraintTop_toBottomOf="@+id/tvDetTitle"
        />
    <TextView
        android:id="@+id/tvDetShortDesc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#fff"
        android:text="@string/pojoDesc"
        android:layout_margin="8dp"
        app:layout_constraintTop_toBottomOf="@+id/tvDetDate"
        app:layout_constraintEnd_toEndOf="@id/tvDetFullDesc"
        />
    <TextView
        android:id="@+id/tvDetFullDesc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#fff"
        android:text="@string/pojoDesc"
        android:layout_margin="8dp"
        app:layout_constraintTop_toBottomOf="@+id/tvDetShortDesc"
        app:layout_constraintEnd_toEndOf="parent"
        />



</android.support.constraint.ConstraintLayout>